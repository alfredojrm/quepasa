<section>
    <div class="hero" style="background-image: url({{Image(data.hero_image).src}});">
        <div class="container">
            <div class="row">
                <div class="col-12 py-5 text-center">
                    <h1>
                        {{data.hero_title}}
                    </h1>
                </div>
            </div>
        </div>
    </div>
</section>
<section>
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-12">
                {{data.first_text}}
            </div>
        </div>
    </div>
</section>
<section>
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-12">
                {{data.text}}
            </div>
            <div class="col-lg-6 col-12">
                <img src="{{Image(data.imagen).src}}" alt="">
            </div>
        </div>
    </div>
</section>
<section>
    <div class="container content__newsletter">
        {% filter shortcodes %}
            [subscribe]
        {% endfilter %}
    </div>
</section>
<section>
    <div class="container content__instagram">
        {% filter shortcodes %}
            [instagram]
        {% endfilter %}
    </div>
</section>