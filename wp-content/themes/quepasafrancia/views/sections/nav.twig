<nav class="navbar navbar-expand-lg fixed-top navbar-dark py-3">
	<div class="container">
		<a class="navbar-brand" href="/">
			<img src="{{logo}}" alt="Que pasa francia - logo">
		</a>
		<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
			<span class="navbar-toggler-icon"></span>
		</button>
		<div class="collapse navbar-collapse" id="navbarSupportedContent">
			<ul class="navbar-nav ms-auto mb-2 mb-lg-0">
				{% for item in main_menu.items %}
					<li class="nav-item {{item.children ? 'dropdown' : ''}}">
						<a href="{{item.link}}" class="nav-link {{item.children ? 'dropdown-toggle'}}" {{ item.child ? 'data-bs-toggle="dropdown" role="button" aria-expanded="false"' : '' }} >{{item.title}}</a>
						{% if item.children %}
							<ul class="dropdown-menu">
								{% for child in item.children %}
									<li>
										<a class="dropdown-item" href="{{ child.link }}">
                                            {{ child.title }}
                                        </a>
									</li>
								{% endfor %}
							</ul>
						{% endif %}
					</li>
				{% endfor %}
			</ul>
		</div>
	</div>
</nav>
