<div class="splide">
	<div class="splide__track">
		<ul class="splide__list">
			{% for item in featured_posts %}
				<li class="splide__slide" style="background-image: url({{item.background_image}}); background-size:cover;">
                    <div class="container h-100">
                        <div class="row h-100 align-items-center">
						<div class="col-12 text-center">
							{% set itemPost = function('get_post', item.post) %}
							{% set category = getFirstCategory(itemPost.ID) %}
							<span class="featured-post__cat">{{category.name}}</span>
							{% if loop.index == 0 %}
								<h1 class="featured-post__title">
									{{itemPost.post_title}}
								</h1>
							{% else %}
								<h2 class="featured-post__title">
									{{itemPost.post_title}}
								</h2>
							{% endif %}
							<a href="{{itemPost.permalink}}">
								Saber m√°s
							</a>
						</div>
                        </div>
                    </div>
                </li>
			{% endfor %}
		</ul>
	</div>
</div>
